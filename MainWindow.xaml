<Window x:Class="TsukiAI.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsukiAI.Desktop"
        xmlns:sys="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Personal AI Chat"
        Width="720"
        Height="520"`r`n        Icon="tsuki_icon.png"
        Background="#0B0C10"
        FontFamily="Segoe UI">
    <Window.Resources>
        <sys:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <Style x:Key="RoundedTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Foreground" Value="#F2FFFFFF"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="SelectionBrush" Value="#66FFFFFF"/>
            <Setter Property="SelectionTextBrush" Value="#FFFFFFFF"/>
            <Setter Property="Background" Value="#18FFFFFF"/>
            <Setter Property="BorderBrush" Value="#2CFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="#EFFFFFFF"/>
            <Setter Property="Background" Value="#18FFFFFF"/>
            <Setter Property="BorderBrush" Value="#2CFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#24FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TinyIconButton" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#18FFFFFF"/>
            <Setter Property="BorderBrush" Value="#2CFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#EFFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#24FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Anime-ish gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B0C10" Offset="0.00"/>
                <GradientStop Color="#1A0F2E" Offset="0.35"/>
                <GradientStop Color="#0C1B2A" Offset="0.70"/>
                <GradientStop Color="#0B0C10" Offset="1.00"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Subtle sparkle dots -->
        <Canvas Opacity="0.20" IsHitTestVisible="False">
            <Ellipse Width="3" Height="3" Fill="#FFFFFF" Canvas.Left="40" Canvas.Top="50"/>
            <Ellipse Width="2" Height="2" Fill="#FFFFFF" Canvas.Left="120" Canvas.Top="140"/>
            <Ellipse Width="2" Height="2" Fill="#FFFFFF" Canvas.Left="310" Canvas.Top="90"/>
            <Ellipse Width="3" Height="3" Fill="#FFFFFF" Canvas.Left="520" Canvas.Top="170"/>
            <Ellipse Width="2" Height="2" Fill="#FFFFFF" Canvas.Left="620" Canvas.Top="60"/>
            <Ellipse Width="2" Height="2" Fill="#FFFFFF" Canvas.Left="680" Canvas.Top="240"/>
        </Canvas>

        <Border Margin="16"
                CornerRadius="18"
                Background="#AA0B0C10"
                BorderBrush="#33FFFFFF"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="28" ShadowDepth="0" Opacity="0.55" Color="Black"/>
            </Border.Effect>

            <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,12">
            <StackPanel DockPanel.Dock="Left"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        ToolTip="Tsuki profile"
                        MouseLeftButtonUp="Profile_Click">
                <!-- Neon "orb" avatar -->
                <Border Width="36" Height="36" CornerRadius="18" Margin="0,0,10,0">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                            <GradientStop Color="#66FFFFFF" Offset="0.25"/>
                            <GradientStop Color="#00FFFFFF" Offset="1.0"/>
                        </RadialGradientBrush>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="#55FFFFFF"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>1</Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.65" Color="#FF7AE6FF"/>
                    </Border.Effect>
                    <Grid>
                        <Ellipse Fill="{Binding AccentBrush}" Opacity="0.55" Margin="6"/>
                        <TextBlock Text="AI" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <StackPanel>
                    <TextBlock Foreground="#EFFFFFFF"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Text="{Binding AssistantName}"/>
                    <TextBlock Foreground="#CCFFFFFF"
                               FontSize="12"
                               Text="{Binding EmotionKaomoji}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Foreground="#7FFFFFFF" FontSize="11" Text="{Binding CpuText}" Margin="0,0,10,0"/>
                        <TextBlock Foreground="#7FFFFFFF" FontSize="11" Text="{Binding MemoryText}" Margin="0,0,10,0"/>
                        <TextBlock Foreground="#7FFFFFFF" FontSize="11" Text="{Binding OllamaStatus}" Margin="0,0,10,0"/>
                        <TextBlock Foreground="#7FFFFFFF" FontSize="11" Text="{Binding ModelStatus}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                        <!-- 12 dots (5-min ticks) -->
                        <ItemsControl ItemsSource="{Binding TickDots}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1" Columns="12"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="8" Height="8" Margin="2,0">
                                        <Ellipse.Style>
                                            <Style TargetType="{x:Type Ellipse}">
                                                <Setter Property="Fill" Value="#24FFFFFF"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="True">
                                                        <Setter Property="Fill" Value="{Binding DataContext.AccentBrush, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Foreground="#7FFFFFFF" FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0" Text="5mÃ—12"/>
                        <TextBlock Foreground="#7FFFFFFF" FontSize="10" VerticalAlignment="Center" Margin="8,0,0,0" Text="{Binding NextCaptureInText}"/>
                        <TextBlock Foreground="#7FFFFFFF" FontSize="11" VerticalAlignment="Center" Margin="12,0,0,0" Text="{Binding StatusText}"/>
                    </StackPanel>
                </StackPanel>

                <Button Width="44"
                        Height="44"
                        Style="{StaticResource TinyIconButton}"
                        Background="#18FFFFFF"
                        BorderBrush="#2CFFFFFF"
                        BorderThickness="1"
                        Click="DevLog_Click"
                        ToolTip="Dev log"
                        Foreground="#EFFFFFFF"
                        FontSize="14"
                        Content="ðŸ“‹"
                        Margin="0,0,8,0"/>
                <Button Width="44"
                        Height="44"
                        Style="{StaticResource TinyIconButton}"
                        Background="#18FFFFFF"
                        BorderBrush="#2CFFFFFF"
                        BorderThickness="1"
                        Click="Settings_Click"
                        ToolTip="Settings"
                        Foreground="#EFFFFFFF"
                        FontSize="18"
                        Content="âš™"/>
            </StackPanel>
        </DockPanel>

        <!-- Conversation -->
        <Border Grid.Row="1" CornerRadius="14" Background="#12000000" BorderBrush="#22FFFFFF" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.35" Color="Black"/>
            </Border.Effect>
            <Grid>
                <ScrollViewer x:Name="ConversationScroll" VerticalScrollBarVisibility="Auto" Padding="14">
                    <TextBlock Text="{Binding DisplayedConversationText}"
                               Foreground="#E6FFFFFF"
                               FontFamily="Segoe UI, Segoe UI Emoji, Segoe UI Symbol"
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
                <!-- Thinking animation overlay: Tsuki: . / .. / ... -->
                <Border x:Name="ThinkingOverlay"
                        Background="#40000000"
                        CornerRadius="14"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Padding="14,10"
                        Visibility="{Binding IsThinking, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}">
                    <Border.Resources>
                        <Storyboard x:Key="ThinkingDotsStoryboard" RepeatBehavior="Forever" Duration="0:0:1.2">
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ThinkDotsText" Storyboard.TargetProperty="Text">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="."/>
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value=".."/>
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.8" Value="..."/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </Border.Resources>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Tsuki:" Foreground="#E6FFFFFF" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock x:Name="ThinkDotsText" Text="." Foreground="#E6FFFFFF" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Input -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="InputTextBox"
                     Style="{StaticResource RoundedTextBox}"
                     MinHeight="44"
                     Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     PreviewKeyDown="Input_PreviewKeyDown"/>

            <Button Grid.Column="1"
                    x:Name="SendButton"
                    Margin="12,0,0,0"
                    Background="{Binding AccentBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Style="{StaticResource TinyIconButton}"
                    Command="{Binding SubmitCommand}"
                    ToolTip="Send"
                    FontSize="18"
                    Content="âž¤"/>
        </Grid>
            </Grid>
        </Border>

        <!-- Loading Screen Overlay -->
        <Border x:Name="LoadingOverlay"
                Background="#E60B0C10"
                CornerRadius="18"
                Visibility="Collapsed"
                Panel.ZIndex="9999">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.8" Color="Black"/>
            </Border.Effect>
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Animated Orb -->
                    <Border Width="80" Height="80" CornerRadius="40" HorizontalAlignment="Center" Margin="0,0,0,24">
                        <Border.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                                <GradientStop Color="#66FFFFFF" Offset="0.3"/>
                                <GradientStop Color="#00FFFFFF" Offset="1.0"/>
                            </RadialGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#55FFFFFF"/>
                        </Border.BorderBrush>
                        <Border.BorderThickness>2</Border.BorderThickness>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.8" Color="#FF7AE6FF"/>
                        </Border.Effect>
                        <Grid>
                            <Ellipse Fill="{Binding AccentBrush}" Opacity="0.6" Margin="8"/>
                            <TextBlock Text="AI" Foreground="White" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Loading Text -->
                    <TextBlock Text="{Binding LoadingStatusText}"
                               Foreground="#EFFFFFFF"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>

                    <!-- Progress Bar -->
                    <Border Width="280" Height="6" Background="#24FFFFFF" CornerRadius="3" Margin="0,0,0,16">
                        <Border x:Name="LoadingProgressBar" 
                                Background="{Binding AccentBrush}" 
                                CornerRadius="3" 
                                HorizontalAlignment="Left"
                                Width="0">
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Width" 
                                                             From="0" To="280" Duration="0:0:2" 
                                                             AutoReverse="True"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Border>

                    <!-- Subtitle -->
                    <TextBlock Text="{Binding LoadingSubText}"
                               Foreground="#99FFFFFF"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               MaxWidth="320"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
