<Window x:Class="TsukiAI.Desktop.DiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Performance Diagnostics"
        Width="600"
        Height="500"
        Background="#0B0C10"
        Foreground="#EFFFFFFF">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Performance Diagnostics" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>

        <!-- Status Panel -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                <TextBlock Text="Ollama Status:" Foreground="#99FFFFFF"/>
                <TextBlock x:Name="OllamaStatusText" Text="Checking..." FontSize="14" Margin="0,4,0,0"/>
                <TextBlock Text="Model Status:" Foreground="#99FFFFFF" Margin="0,8,0,0"/>
                <TextBlock x:Name="ModelStatusText" Text="Checking..." FontSize="14" Margin="0,4,0,0"/>
                <TextBlock Text="Model Memory:" Foreground="#99FFFFFF" Margin="0,8,0,0"/>
                <TextBlock x:Name="MemoryText" Text="Unknown" FontSize="14" Margin="0,4,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                <TextBlock Text="Last Request Time:" Foreground="#99FFFFFF"/>
                <TextBlock x:Name="RequestTimeText" Text="-" FontSize="14" Margin="0,4,0,0"/>
                <TextBlock Text="Avg Response Time:" Foreground="#99FFFFFF" Margin="0,8,0,0"/>
                <TextBlock x:Name="AvgTimeText" Text="-" FontSize="14" Margin="0,4,0,0"/>
                <TextBlock Text="Cache Hit Rate:" Foreground="#99FFFFFF" Margin="0,8,0,0"/>
                <TextBlock x:Name="CacheHitText" Text="-" FontSize="14" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Log Output -->
        <Border Grid.Row="2" Background="#12000000" BorderBrush="#33FFFFFF" BorderThickness="1" CornerRadius="8">
            <ScrollViewer x:Name="LogScroll" VerticalScrollBarVisibility="Hidden">
                <TextBlock x:Name="LogText" 
                           Text="" 
                           FontFamily="Consolas"
                           FontSize="11"
                           TextWrapping="Wrap"
                           Margin="8"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Refresh" Click="Refresh_Click"
                    Padding="16,8" Margin="0,0,8,0" Background="#24FFFFFF" Foreground="White" BorderBrush="#44FFFFFF"/>
            <Button Content="Test Direct API" Click="TestDirectApi_Click" 
                    Padding="16,8" Margin="0,0,8,0" Background="#24FFFFFF" Foreground="White" BorderBrush="#44FFFFFF"/>
            <Button Content="Force Load Model" Click="ForceLoad_Click" 
                    Padding="16,8" Margin="0,0,8,0" Background="#24FFFFFF" Foreground="White" BorderBrush="#44FFFFFF"/>
            <Button Content="Clear Log" Click="ClearLog_Click" 
                    Padding="16,8" Background="#24FFFFFF" Foreground="White" BorderBrush="#44FFFFFF"/>
        </StackPanel>
    </Grid>
</Window>
