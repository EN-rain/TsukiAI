<Window x:Class="TsukiAI.Desktop.DevLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dev log"
        Width="560"
        Height="420"
        WindowStartupLocation="CenterOwner"
        MinWidth="400"
        MinHeight="300"
        Background="#0B0C10"
        Foreground="#EFFFFFFF"
        FontFamily="Segoe UI">
    <Window.Resources>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#0B0C10"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#F2FFFFFF"/>
        <Style x:Key="LogButton" TargetType="{x:Type Button}">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Foreground" Value="#EFFFFFFF"/>
            <Setter Property="Background" Value="#18FFFFFF"/>
            <Setter Property="BorderBrush" Value="#2CFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#24FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Margin="12" CornerRadius="12" Background="#14000000" BorderBrush="#2CFFFFFF" BorderThickness="1" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Dev log" FontSize="14" FontWeight="SemiBold" Foreground="#EFFFFFFF" Margin="0,0,0,8"/>
            <TextBox x:Name="LogBox"
                     Grid.Row="1"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     FontFamily="Consolas, Segoe UI"
                     FontSize="11"
                     Foreground="#E6FFFFFF"
                     Background="#0D0D0F"
                     BorderBrush="#2CFFFFFF"
                     BorderThickness="1"
                     Padding="10"
                     VerticalContentAlignment="Top"
                     HorizontalContentAlignment="Left"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Style="{StaticResource LogButton}" Content="Clear" Click="Clear_Click" Margin="0,0,8,0"/>
                <Button Style="{StaticResource LogButton}" Content="Refresh" Click="Refresh_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
